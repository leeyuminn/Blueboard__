<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/post_gotoBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:background="#00FFFFFF"
                android:src="@drawable/icon_back" />

            <TextView
                android:id="@+id/post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:fontFamily="@font/palanquin_bold"
                android:padding="5dp"
                android:text="제목 테스트"
                android:textColor="#0A0B0B"
                android:textSize="28sp" />

            <Button
                android:id="@+id/post_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/palanquin_regular"
                android:textColor="#000000"
                android:text="삭제"
                android:layout_gravity="center_vertical">
            </Button>
        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="7px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="#F3F3F3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100">
                <TextView
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:text="마감 :"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:layout_marginHorizontal="25dp" />
                <TextView
                    android:id="@+id/post_dueDate"
                    android:layout_weight="80"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:text="dueDate"
                    android:textColor="#000000"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/post_format"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="10"
                    android:layout_marginHorizontal="25dp"
                    android:text="format" />
            </LinearLayout>

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="7px"
            android:layout_centerInParent="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:background="#F3F3F3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/post_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left"
                android:layout_margin="20dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000000"
                android:text="detail"
                android:textSize="20sp">
            </TextView>

            <Button
                android:id="@+id/announcement_attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:layout_marginHorizontal="30dp"
                android:fontFamily="@font/palanquin_regular"
                android:textColor="#0478FF"
                android:text="첨부파일 다운로드">
            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>