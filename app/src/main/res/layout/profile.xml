<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="username"
            type="String" />
        <variable
            name="studentId"
            type="String" />
        <variable
            name="email"
            type="String" />
        <variable
            name="in"
            type="String" />

    </data>

    <RelativeLayout
        android:id="@+id/profile_"
        android:layout_width="410dp"
        android:layout_height="750dp"
        android:clipToOutline="true"
        android:background="#FFFFFF"
        >

    <TextView
        android:id="@+id/admin"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="318dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/box_border"
        android:gravity="center"
        android:text="관리자"
        android:textColor="#000000"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="146dp"
        android:layout_height="146dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="133dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="16dp"
        android:clipToOutline="true"
        />

    <TextView
        android:id="@+id/profile"
        android:layout_width="150dp"
        android:layout_height="54dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="39dp"
        android:text="Profile"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/in"
            android:layout_width="184dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="446dp"
            android:text="@{in}"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/studentId"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="355dp"
            android:text="@{studentId}"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="119dp"
            android:layout_marginTop="330dp"
            android:text="@{username}"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="187dp"
            android:layout_height="29dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="392dp"
            android:text="@{email}" />

        <Button
        android:id="@+id/edit"
        android:layout_width="184dp"
        android:layout_height="50dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="554dp"
        android:gravity="center"
        android:text="개인정보 수정"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textStyle="bold" />

        <Button
        android:id="@+id/icon_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="657dp"
        android:background="@drawable/icon_home" />

    <Button
        android:id="@+id/icon_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_notification" />

    <Button
        android:id="@+id/icon_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_person" />

    <TextView
        android:id="@+id/unread_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/icon_circle"
        android:gravity="center"
        android:text="3"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/icon_mail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_mail" />

    </RelativeLayout>
</layout>



