<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:weightSum="10">

        <ToggleButton
            android:id="@+id/contentsList_toggleButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/selector_contentstoggle"
            android:checked="false"
            android:textOn=""
            android:textOff="" />

        <TextView
            android:layout_weight="9"
            android:id="@+id/contentsList_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/palanquin_bold"
            android:textSize="16dp"
            android:text="Week #"
            android:textColor="#000000"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/contentsList_uploadButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/roboto_black"
            android:gravity="center"
            android:text="Upload"
            android:textColor="#000000"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/weeks_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp">

        <ListView
            android:id="@+id/weeks_lectureContentsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp" />

    </LinearLayout>
