<?xml version="1.0" encoding="utf-8"?>
<!-- Auto layout, variables, and unit scale are not yet supported -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_"
    android:layout_width="410dp"
    android:layout_height="750dp"
    android:clipToOutline="true"
    android:background="#FFFFFF"
    >

    <TextView
        android:id="@+id/profile"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="39dp"
        android:text="알림"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="48sp"
        android:textStyle="bold" />

    <!--footer-->

    <Button
        android:id="@+id/icon_home"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="657dp"
        android:background="@drawable/icon_home" />

    <Button
        android:id="@+id/icon_notification"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="224dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_notification" />

    <Button
        android:id="@+id/icon_person"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_person" />

    <TextView
        android:id="@+id/unread_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="652dp"
        android:background="@drawable/icon_circle"
        android:gravity="center"
        android:text="3"
        android:textColor="#000000"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/icon_mail"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="656dp"
        android:background="@drawable/icon_mail" />


</RelativeLayout>